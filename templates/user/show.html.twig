{% extends 'base.html.twig' %}

{% block css %}
    {{ parent() }}
{% endblock %}

{% block title %}
    {{ parent() }} | {{ user.pseudo }}
{% endblock %}

{% block body %}

    <div class="user-profile">

        <div class="">
            <img src="{{ asset('assets/img/' ~ user.image ) }}" alt="{{ user.nom }}">
        </div>

        <div class="user-info mx-auto" style="width: 600px;">
            <h1 >{{ user.pseudo }}</h1>
            <div class="mt-3">
                <label for="prenom">Prénom : {{ user.prenom }}</label>
            </div>
            <div class="mt-3">
                <label for="nom">Nom : {{ user.nom }}</label>
            </div>
            <div class="mt-3">
                <label for="telephone">Téléphone : {{ user.telephone }}</label>
            </div>
            <div class="mt-3">
                <label for="email">Email : {{ user.email }}</label>
            </div>
            <div class="mt-3">
                <label for="campus">Campus : {{ user.campus.nom }}</label>
            </div>
            <div class="mt-5">
                <a  href="{{ path("main_home") }}">
                    <button class="btn btn-secondary " type="button" name="Retour">Retour</button>
                </a>
            </div>
        </div>

    </div>

{% endblock %}